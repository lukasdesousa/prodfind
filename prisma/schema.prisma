generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id       String    @id @default(uuid())
  storeName String
  email    String @unique
  password String
  location String
  createdAt DateTime @default(now())
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String 
  price Float
  description String?
  stock Int
  keys String[]
  createdAt DateTime @default(now())

  sellerId String
  seller Seller @relation(fields: [sellerId], references: [id])
}
